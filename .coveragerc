[run]
source = src/
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */migrations/*
    */settings/*
    */examples/*
    */gui/*
    */__init__.py
    */ofc_solver_v2.py
    */ofc_solver_new.py
    */ofc_solver_integration.py

[report]
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

ignore_errors = True

[html]
directory = htmlcov
show_contexts = True

[xml]
output = coverage.xml